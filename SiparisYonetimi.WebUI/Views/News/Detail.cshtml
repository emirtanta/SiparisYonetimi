@model News
@{
    ViewData["Title"] = Model.Title+" Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6">
                <img class="card-img-top mb-5 mb-md-0" src="/Img/@Model.Image" alt="@Model.Title">
            </div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder">@Model.Title</h1>
                <p class="lead">@Html.Raw(Model.Description)</p>
                <p>
                    <i>Eklenme Tarihi : @String.Format("{0:d}", Model.CreateDate)</i>
                </p>
            </div>
        </div>
    </div>
</section>

